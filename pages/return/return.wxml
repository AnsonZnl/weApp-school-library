        <image src="{{detail.images}}" style="display:block;width: 200rpx;height:300rpx;margin: auto;"></image>
    </view>
    <view class="mb30">书籍名称：{{detail.name}}</view>
    <view class="mb30">书籍作者：{{detail.author}}</view>
