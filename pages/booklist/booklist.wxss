.book-item{
  display: flex;
  margin-bottom: 30rpx;
}
.book-img{
  width: 180rpx;
  height: 270rpx;
}
.des{
  flex: 1;
  padding:20rpx 0 20rpx 20rpx;
}
.puber {
  font-size: 24rpx;
}
.author{
  font-size: 30rpx;
  color: #333;
}
.book-rate{
  font-size: 26rpx;
  color: red;
}

@keyframes remindMessage {
  0% {
   -webkit-transform: translateX(90%);
  }
 
  100% {
   -webkit-transform: translateX(-180%);
  }
 }
 
 .tongzhitext {
  margin-right:80rpx;
  margin-left: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
 }
 
 .tongzhi-text {
   position: absolute;
   top: 0;
  font-size: 28rpx;
  animation: remindMessage 14s linear infinite;
  width: 100%;
  color: #d09868;
  display: block;
 }
 
 .notice-wrap {
   position: relative;
  background: #ffebda;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  color: #d09868;
  font-size: 28rpx;
 }
 
 .closeView {
  width: 45rpx;
  height: 45rpx;
  line-height: 45rpx;
  position: absolute;
  right: 20rpx;
  top: 5rpx;
  text-align: center;
  font-size: 35rpx;
 }